{
	"manifest_version": 2,
	"name": "Tad",
	"version": "0.1.0",
	"description": "A scratch space for notes, reminders, and whatever else you want to keep around",
	"author": "Joel Gustafson",
	"chrome_url_overrides": {
		"newtab": "index.html"
	},
	"chrome_settings_overrides": {
		"homepage": "index.html"
	},
	"permissions": ["storage"],
	"applications": {
		"gecko": {
			"id": "{4c6d75f6-cdad-4947-aec4-90a071b7fb81}",
			"strict_min_version": "53.0"
		}
	},
	"commands": {
		"toggle-theme": {
			"suggested_key": {
				"default": "Ctrl+Period",
				"mac": "Command+Period"
			},
			"description": "Toggle dark theme"
		}
	}
}
